<div>
  <h4>Upload CSV to import!</h4>
  <%= form_tag import_users_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
  <h5>*Allowed file types are .xlsx and .csv</h5>
</div>

<%= flash[:notice] %>
<br>
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Address</th>
      <th>ZipCode</th>
      <th>City</th>
      <th>Country Code</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.zip_code %></td>
        <td><%= customer.city %></td>
        <td><%= customer.country_code %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>



